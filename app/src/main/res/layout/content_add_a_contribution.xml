<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="com.example.android.hubert.Activities.Add_a_contribution"
    tools:showIn="@layout/activity_add_a_contribution"
    android:padding="16dp">
    <TextView
        android:id="@+id/tv_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contribution_from"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/sp_members"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_member"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_member"
        />
    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/recieved_on"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintStart_toStartOf="@id/tv_member"
        app:layout_constraintTop_toBottomOf="@id/tv_member"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="02/12/2018"
        style="@style/TextAppearance.AppCompat.Medium"
        android:paddingHorizontal="8dp"
        app:layout_constraintLeft_toRightOf="@+id/date_label"
        app:layout_constraintBaseline_toBaselineOf="@id/date_label"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/change_date"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/primary_text_light"
        android:onClick="showDatePicker"
        android:background="@drawable/round_edge_rect_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"/>

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/enter_an_amount"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_label"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        style="@style/TextAppearance.AppCompat.Large"
        android:text="@string/add"
        android:gravity="center"
        android:background="@drawable/round_edge_rect_1"
        android:onClick="add"
        app:layout_constraintTop_toBottomOf="@+id/et_amount"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>

